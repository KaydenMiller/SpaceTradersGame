@inject ISnackbar Snackbar

@code {

    protected override void OnInitialized()
    {
        InfoNotificationReceived += OnInfoNotificationReceived;
    }

    private void OnInfoNotificationReceived(object? sender, SnackBarNotificationEventArgs e)
    {
        Snackbar.Add($"{e.Name}: {e.Description ?? ""}", e.Severity, (options =>
        {
            options.SnackbarVariant = e.Variant ?? Variant.Text;
        }));
    }
}